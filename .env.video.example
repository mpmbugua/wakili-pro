# Video Consultation Environment Variables

# STUN/TURN Server Configuration
STUN_SERVER_URL=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password

# Alternative TURN servers (for production)
# COTURN_URL=turn:coturn.your-domain.com:3478
# XIRSYS_URL=turn:global.turn.xirsys.com:80
# XIRSYS_USERNAME=your-xirsys-username
# XIRSYS_PASSWORD=your-xirsys-password

# Recording Storage Configuration
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=wakili-pro-recordings
AWS_S3_RECORDINGS_PREFIX=consultations/recordings/

# CloudFlare R2 Configuration (alternative to S3)
CLOUDFLARE_R2_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_R2_ACCESS_KEY=your-r2-access-key
CLOUDFLARE_R2_SECRET_KEY=your-r2-secret-key
CLOUDFLARE_R2_BUCKET=wakili-recordings
CLOUDFLARE_R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# Video Quality Configuration
VIDEO_QUALITY_AUTO_ADJUST=true
VIDEO_MAX_BITRATE=1500000
VIDEO_MIN_BITRATE=300000
AUDIO_MAX_BITRATE=128000
AUDIO_MIN_BITRATE=32000

# Recording Configuration
RECORDING_ENABLED=true
RECORDING_FORMAT=webm
RECORDING_VIDEO_CODEC=VP9
RECORDING_AUDIO_CODEC=OPUS
RECORDING_MAX_DURATION=7200000
RECORDING_CHUNK_SIZE=10000

# Performance Configuration
MAX_PARTICIPANTS_PER_ROOM=6
MAX_CONCURRENT_ROOMS=100
WEBSOCKET_PING_INTERVAL=25000
WEBSOCKET_PING_TIMEOUT=60000

# Mobile Configuration
PUSH_NOTIFICATION_SERVICE=firebase
FIREBASE_SERVER_KEY=your-firebase-server-key
FIREBASE_PROJECT_ID=wakili-pro-mobile

# Production WebRTC Configuration
FORCE_RELAY=false
ICE_GATHERING_TIMEOUT=5000
PEER_CONNECTION_TIMEOUT=30000